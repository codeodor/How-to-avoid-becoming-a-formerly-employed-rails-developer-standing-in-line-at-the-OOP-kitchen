<h1>Listing courses</h1>

<table>
  <tr>
    <th>Department</th>
    <th>Name</th>
    <th>Course number</th>
    <th>Description</th>
    <th>Website</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @courses.each do |course| %>
  <tr>
    <td><%= course.department_id %></td>
    <td><%= course.name %></td>
    <td><%= course.course_number %></td>
    <td><%= course.description %></td>
    <td><%= course.website %></td>
    <td><%= link_to 'Show', [course.department, course] %></td>
    <td><%= link_to 'Edit', edit_department_course_path(course.department, course) %></td>
    <td><%= link_to 'Destroy', [course.department, course], confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Course', new_department_course_path(params[:department_id]) %>
