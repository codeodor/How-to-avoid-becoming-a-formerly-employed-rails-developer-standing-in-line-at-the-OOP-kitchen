<h1>Listing sections</h1>

<table>
  <tr>
    <th>Section</th>
    <th>Registration status</th>
    <th>Start date</th>
    <th>End date</th>
    <th>Registration fee</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @sections.each do |section| %>
  <tr>
    <td><%= section.full_name %></td>
    <td><%= Section::RegistrationStatuses[section.registration_status] %></td>
    <td><%= section.start_date %></td>
    <td><%= section.end_date %></td>
    <td><%= section.registration_fee %></td>
    <td><%= link_to 'Show', [section.course.department, section.course, section] %></td>
    <td><%= link_to 'Edit', edit_department_course_section_path(section.course.department, section.course, section) %></td>
    <td><%= link_to 'Destroy', [section.course.department, section.course, section], confirm: 'Are you sure?', method: :delete %></td>
  </tr>
  <tr>
    <td colspan="5">
      <%= section.description %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Section', new_department_course_section_path(params[:department_id], params[:course_id]) %>
